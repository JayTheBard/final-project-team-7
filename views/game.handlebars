<main class = "content">
<!--Not sure if I am going to keep this section as a header or not, causes background.-->
      <aside class="menu-container-left">

        <!--
          Dont know if we need a menu, but it was on the layout so it's here for now
        -->

        <div class = "menu-newgame-left">
        <h2>Menu</h2>
          <div class = "NG-button">
            <form action="/new" method="POST"><input class="new-game" type="submit" value="New Game"/></form>
          </div>
        </div>


        <div class = "menu-store-left">
            <h3>1 Cost Heroes</h3>
            <div class = "hero-decks">
              <button id="level-1-hero-button" class="deck-one-button"></button>
              <!--Find a way to make the button pull a 1 cost hero and take one of the players' cost points.-->
            </div>
            <h3>2 Cost Heroes</h3>
            <div class = "hero-decks">
              <button id="level-2-hero-button" class="deck-two-button"></button>
              <!--Find a way to make the button pull a 2 cost hero and take two of the players' cost points.-->
            </div>
            <h3>1 Cost Actions</h3>
              <button id="upgrade-hero-button"class="hero-button">Upgrade Hero</button>
          </div>

      </aside>



<section id="card-table">
  <div class="battle-zone">
      <div id="villain-card-options" class="card-hand">
        <!--
          This is were people chose which villain they want to fight
        -->

        {{#each villains}}
          {{>villainCard}}
        {{/each}}
      </div>


    <div class= "battlefield">
      <div class="villain-card-table">
        <!--
          This is where the selected villain card and stats go
        -->
        <div id="villain-card-spot">
          <!--
            Image of card here
          -->
        </div>
        <div class="villain-data-boxes">
          <div class="attack-total rollbox">
            <!--
              Calculated total attack damage goes here
            -->
          </div>
          <div class="brawn-total rollbox">
            <!--
              Calculated total attack damage goes here
            -->
          </div>
          <div class="power-total rollbox">
            <!--
              Calculated total attack damage goes here
            -->
          </div>
          <div class="tech-total rollbox">
            <!--
              Calculated total attack damage goes here
            -->
          </div>
          <div class="dice-roll rollbox">
            <!--
              Villain dice roll goes here
            -->
          </div>
	         <div class="final-total rollbox">
	            <!--
	             Final calculated total
	            -->
	           </div>
        </div>
      </div>

      <button id="start-turn-button" class="roll-button">Roll</button>

      <div class="hero-card-table">
        <!--
          This is where the selected hero card and stats go
        -->
        <div class="hero-data-boxes">
          <div class="attack-total rollbox">
            <!--
              Calculated total attack damage goes here
            -->
          </div>
          <div class="brawn-total rollbox">
            <!--
              Calculated total attack damage goes here
            -->
          </div>
          <div class="power-total rollbox">
            <!--
              Calculated total attack damage goes here
            -->
          </div>
          <div class="tech-total rollbox">
            <!--
              Calculated total attack damage goes here
            -->
          </div>
          <div class="dice-roll rollbox">
            <!--
              Hero dice roll goes here
            -->
          </div>
	         <div class="final-total rollbox">
	            <!--
	             Final calculated total
	            -->
	           </div>
        </div>
        <div id="hero-card-spot">
          <!--
            Image of card here
          -->
        </div>
      </div>
    </div>

    <div id="hero-card-options" class="card-hand">
        {{#each heroes}}
          {{>heroCard}}
        {{/each}}
    </div>
  </div>

</section>

      <aside class="menu-container-right">
        	  <h3>Your Score:</h3>
        <div class="score-counter">
	  <div id="score-total" class="scoredata rollbox">

      {{score}}
	  </div>
	</div>
    <h3>Points to spend:</h3>
        <div class="points-counter">
	  <div id="point-total" class="scoredata rollbox">

      {{money}}
	  </div>
	</div>
      </aside>

  </div>
